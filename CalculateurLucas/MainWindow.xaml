<Window x:Class="CalculateurLucas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculatrice Lucas"
        Height="800"
        Width="450"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#0F1419">

    <Grid Background="#0F1419">

        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#0F1419" Padding="15">
            <StackPanel VerticalAlignment="Center">
                <TextBox x:Name="TB_display_secondary"
                         FontSize="14"
                         Text=""
                         Foreground="#6B7280"
                         Background="Transparent"
                         BorderThickness="0"
                         TextAlignment="Right"
                         IsReadOnly="True"
                         Margin="0,0,0,8"/>
                <TextBox x:Name="TB_display"
                         FontSize="48"
                         Text="0"
                         Foreground="#FFFFFF"
                         Background="Transparent"
                         BorderThickness="0"
                         HorizontalContentAlignment="Right"
                         VerticalContentAlignment="Center"
                         IsReadOnly="True"
                         FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Background="#0F1419">

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.Resources>
                <Style x:Key="GrayButtonStyle" TargetType="Button">
                    <Setter Property="Background" Value="#1F2937"/>
                    <Setter Property="Foreground" Value="#FFFFFF"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Margin" Value="4"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="0">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#2D3748"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <Style x:Key="BlueButtonStyle" TargetType="Button" BasedOn="{StaticResource GrayButtonStyle}">
                    <Setter Property="Background" Value="#0EA5E9"/>
                    <Setter Property="Foreground" Value="#FFFFFF"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#0284C7"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <Style x:Key="LightBlueTransparentStyle" TargetType="Button" BasedOn="{StaticResource GrayButtonStyle}">
                    <Setter Property="Background" Value="#6603A8D4"/>
                    <Setter Property="Foreground" Value="#FFFFFF"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#8803A8D4"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Grid.Resources>

            <Button Content="sin" Grid.Row="0" Grid.Column="0" Style="{StaticResource LightBlueTransparentStyle}" Click="BTN_Sin_Click" FontSize="12"/>
            <Button Content="cos" Grid.Row="0" Grid.Column="1" Style="{StaticResource LightBlueTransparentStyle}" Click="BTN_Cos_Click" FontSize="12"/>
            <Button Content="tan" Grid.Row="0" Grid.Column="2" Style="{StaticResource LightBlueTransparentStyle}" Click="BTN_Tan_Click" FontSize="12"/>
            <Button Content="pi" Grid.Row="0" Grid.Column="3" Style="{StaticResource LightBlueTransparentStyle}" Click="BTN_Pi_Click" FontSize="12"/>

            <Button Content="e" Grid.Row="1" Grid.Column="0" Style="{StaticResource LightBlueTransparentStyle}" Click="BTN_E_Click" FontSize="12"/>
            <Button Content="x2" Grid.Row="1" Grid.Column="1" Style="{StaticResource LightBlueTransparentStyle}" Click="BTN_Carre_Click" FontSize="12"/>
            <Button Content="sqrt" Grid.Row="1" Grid.Column="2" Style="{StaticResource LightBlueTransparentStyle}" Click="BTN_Racine_Click" FontSize="11"/>
            <Button Content="1/x" Grid.Row="1" Grid.Column="3" Style="{StaticResource LightBlueTransparentStyle}" Click="BTN_Inverse_Click" FontSize="12"/>

            <Button Content="%" Grid.Row="2" Grid.Column="0" Style="{StaticResource LightBlueTransparentStyle}" Click="BTN_Pourcentage_Click"/>
            <Button Content="AC" Grid.Row="2" Grid.Column="1" Style="{StaticResource GrayButtonStyle}" Click="BTN_Clr_Click" FontSize="12"/>
            <Button Content="CE" Grid.Row="2" Grid.Column="2" Style="{StaticResource BlueButtonStyle}" Click="BTN_Backspace_Click" FontSize="12"/>
            <Button Content="&#xF7;" Grid.Row="2" Grid.Column="3" Style="{StaticResource BlueButtonStyle}" Click="BTN_Divise_Click" FontSize="25"/>

            <Button Content="7" Grid.Row="3" Grid.Column="0" Style="{StaticResource GrayButtonStyle}" Click="BTN_Number_Click"/>
            <Button Content="8" Grid.Row="3" Grid.Column="1" Style="{StaticResource GrayButtonStyle}" Click="BTN_Number_Click"/>
            <Button Content="9" Grid.Row="3" Grid.Column="2" Style="{StaticResource GrayButtonStyle}" Click="BTN_Number_Click"/>
            <Button Content="X" Grid.Row="3" Grid.Column="3" Style="{StaticResource BlueButtonStyle}" Click="BTN_Multiple_Click" FontSize="16"/>

            <Button Content="4" Grid.Row="4" Grid.Column="0" Style="{StaticResource GrayButtonStyle}" Click="BTN_Number_Click"/>
            <Button Content="5" Grid.Row="4" Grid.Column="1" Style="{StaticResource GrayButtonStyle}" Click="BTN_Number_Click"/>
            <Button Content="6" Grid.Row="4" Grid.Column="2" Style="{StaticResource GrayButtonStyle}" Click="BTN_Number_Click"/>
            <Button Content="-" Grid.Row="4" Grid.Column="3" Style="{StaticResource BlueButtonStyle}" Click="BTN_Moins_Click" FontSize="25"/>

            <Button Content="1" Grid.Row="5" Grid.Column="0" Style="{StaticResource GrayButtonStyle}" Click="BTN_Number_Click"/>
            <Button Content="2" Grid.Row="5" Grid.Column="1" Style="{StaticResource GrayButtonStyle}" Click="BTN_Number_Click"/>
            <Button Content="3" Grid.Row="5" Grid.Column="2" Style="{StaticResource GrayButtonStyle}" Click="BTN_Number_Click"/>
            <Button Content="+" Grid.Row="5" Grid.Column="3" Style="{StaticResource BlueButtonStyle}" Click="BTN_plus_Click" FontSize="25"/>

            <Button Content="0" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource GrayButtonStyle}" Click="BTN_Number_Click"/>
            <Button Content="." Grid.Row="6" Grid.Column="2" Style="{StaticResource GrayButtonStyle}" Click="BTN_Virgule_Click"/>
            <Button Content="=" Grid.Row="6" Grid.Column="3" Style="{StaticResource BlueButtonStyle}" Click="BTN_Egale_Click" FontSize="25"/>

        </Grid>
    </Grid>
</Window>